<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- Styles -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="{{ asset('style.css') }}" />

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,700|Roboto:200,400,700" rel="stylesheet">

        <!-- Scripts -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    </head>
    <body>

        <nav>
            <div class="container">

                <div class="left-menu">
                    <img src="" alt="logo">
                    <a href="{{ path('app_default_index') }}">Home</a>
                    <a href="{{ path('app_default_traininglist') }}">Vind een training</a>
                    <a href="{{ path('app_default_trainerlist') }}">Vind een trainer</a>
                </div>
                <div class="middle-menu">
                    <input type="text" placeholder="Zoek een training of trainer" class="search">
                </div>
                <div class="right-menu">
                    {% if app.user %}
                        {% if app.user.avatar %}
                            <img src="{{ asset('upload/image/'~app.user.avatar) | imagine_filter('basic_thumbnail') }}"
                                 alt="Avatar"><br>
                        {% endif %}
                        Ingelogd als {{ app.user.firstName }} {{ app.user.lastName }}<br>
                        <a href="{{ path('fos_user_security_logout') }}">Uitloggen</a><br>
                    {% else %}
                        <a href="{{ path('fos_user_registration_register') }}" class="registrer">Registreren als trainer</a>
                        <a href="{{ path('fos_user_security_login') }}" class="login">Inloggen voor trainers</a>
                    {% endif %}
                    {#<a href="#" class="login">Inloggen voor trainers</a>#}
                </div>


            </div>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
