{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper" class="home">
        <div id="container">
            <div id="header">
                <div class="content">
                    <h1>Vind de ervaren trainers die bij je passen</h1>
                    <div class="search-area">
                        <input type="text" class="search"><div class="search-button">Zoeken</div>
                    </div>
                </div>
            </div>
            <table>
                <tr>
                    <th>Naam training</th>
                    <th>Trainer</th>
                    <th>Tags</th>
                </tr>
                {% for item in items %}
                    <tr>
                        <td>{{ item.title }}</td>
                        <td>{% if item.user is not null %}{{ item.user.firstName }} {{ item.user.lastName }}{% endif %}</td>
                        <td>{{ item.tags|join(', ') }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}