{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper" class="home">
        <div id="header">
            <h1>Mijn trainingen</h1>
        </div>

        <div class="container">
            <div class="row">
              <div class="col-md-9 search_results">
                {% for training in trainingItem %}

                  <div class="search_result row profile_picture">
                    <a href="{{ path('app_default_trainerdetail', {'slug': training.user.slug }) }}" class="col col-md-3">
                      <div class="avatar">
                        <img class="avatar" src="{{ asset('upload/image/'~training.user.avatar) | imagine_filter('avatar_overview') }}">
                        <div class="trainer">
                          <span>{% if training.user is not null %}{{ training.user.firstName }} {{ training.user.lastName }}{% endif %}</span>
                          <span class="functie">{% if training.user is not null %}{{ training.user.typeTrainer }} {{ training.user.lastName }}{% endif %}</span>
                        </div>
                      </div>
                    </a>
                    <a href="{{ path('app_default_trainingdetail', {'slug': training.slug }) }}" class="col">
                      <div class="content">
                        <h3 class="titel">{{ training.title }}</h3>
                        <p class="properties">
                          <span class="price">$ 723</span>
                          <span class="timeframe">3 dagen</span>
                          <span class="type">Individueel / groep</span>
                        </p>
                        <p>{{ training.description|length > 350 ? training.description|slice(0, 350) ~ '...' : training.description }}</p>
                        <span class="tags">
                          {% for training in training.tags %}
                          <span> TAG HERE </span>
                          {% endfor %}
                        <!-- {{ training.tags|join(', ') }}</span> -->
                      </div>
                    </a>
                  </div>

                {% endfor %}

              </div>
              <div class="col-md-3 filters content">
                <div class="row">
                  <h3>Sorteren op</h3>
                  <div class="sorteren">Relevantie <i class="fa fa-angle-down" aria-hidden="true"></i></div>
                  <!--
                    - Relevantie
                    - Prijs oplopend
                    - Prijs aflopend
                  -->
                </div>
                <div class="">
                  <h3>Filter</h3>
                  <b><label>Price range</label></b>

                  <b><label for="typetraining">Type training</label></b>
                  <div class="radiobuttons">
                    <input type="checkbox" name="typetraining" id="Individueel" value="Individueel">
                      <label for="Individueel">Individueel (amount)</label><br>
                    <input type="checkbox" name="typetraining" id="Groep" value="Groep">
                      <label for="Groep">Groep (amount)</label>
                  </div>

                  <b><label for="vog">Verklaring omtrend gedrag</label></b>
                  <div class="radiobuttons">
                    <input type="checkbox" id="vog" name="vog" value="vog">
                    <label for="vog">Overhandigbaar (amount)</label><br>
                  </div>

                  <label for="duur">Trainingsduur</label>
                  <input type="number" name="duration" class="duration_number" value="1" step="1" min="1" max="7">
                  <select class="duration" name="duration">
                    <option value="dagen" selected>Dagen</option>
                    <option value="dagen">Uren</option>
                  </select>
                  <!--
                    - Aantal uur
                    - Aantal dagdelen
                    - Aantal dagen
                  -->

                </div>
              </div>
            </div>
          </div>
    </div>
{% endblock %}
